<?xml version="1.0"?><Report><ReportQuery><Format><ReportTitle>PO REPORT</ReportTitle><ReportDescription>The PO Report provides a list of the Purchase Orders placed in our store.</ReportDescription><PageSize>A4</PageSize><PageOrientation>Portrait</PageOrientation><TopMargin></TopMargin><BottomMargin></BottomMargin><RightMargin></RightMargin><LeftMargin></LeftMargin><pdfFont>stsongstdlight</pdfFont><pdfFontSize></pdfFontSize><PreExecuteCode>NONE</PreExecuteCode><formBetweenRows>solidline</formBetweenRows><gridDisplay>show</gridDisplay><gridSortable>yes</gridSortable><gridSearchable>yes</gridSearchable><gridPageable>yes</gridPageable><gridPageSize>.DEFAULT</gridPageSize></Format><Datasource><SourceType>database</SourceType><SourceConnection><DatabaseType>mysql</DatabaseType><DatabaseName></DatabaseName><HostName></HostName><ServiceName></ServiceName><UserName></UserName><Password></Password></SourceConnection></Datasource><EntryForm><Query><TableSql></TableSql><WhereSql></WhereSql><GroupSql></GroupSql><RowSelection>all</RowSelection><SQL><QuerySql></QuerySql><SQLRaw>SELECT ven.vendor_name vendor_name, po.purchase_order_code, po.po_date,
CASE
  WHEN po.status = '1' THEN 'Open'
  WHEN  po.status = '2' THEN 'Partially Invoiced'
  WHEN  po.status = '3' THEN 'Fully Invoiced'
  WHEN  po.status = '4' THEN 'Rejected'
  WHEN  po.status = '5' THEN 'Cancelled'
  WHEN  po.status = '6' THEN 'Closed'
  ELSE '--'
END po_status, user.first_name AS name, pro_fam.pro_family_name, prod.pro_name, variety.variety_name, po_det.po_det_container_qty, po_det.po_det_price, po_det.po_det_cotton_qty, po_det.po_det_net_weight,
TRUNCATE((po_det.po_det_cotton_qty * po_det.po_det_price),2) as totalamount
FROM  tbl_purchase_order po
JOIN tbl_vendor ven
ON ven.vendor_id = po.po_vendor_id 
JOIN tbl_purchase_order_details po_det
ON po_det.po_id = po.po_id
JOIN tbl_product_family pro_fam
ON pro_fam.pro_family_id = po_det.po_det_prod_fmly_id
JOIN tbl_product prod
ON prod.product_id = po_det.po_det_product_id
JOIN tbl_product_variety variety
ON variety.variety_id = po_det.po_det_variety_id
LEFT OUTER JOIN tbl_user user
ON user.user_id = po.created_by</SQLRaw></SQL><QueryColumns><QueryColumn><Name>vendor_name</Name><TableName>ven</TableName><ColumnName>vendor_name</ColumnName><ColumnType>char</ColumnType><ColumnLength>30</ColumnLength><Format><column_display>show</column_display><content_type>plain</content_type><ColumnStartPDF></ColumnStartPDF><justify>left</justify><ColumnWidthPDF></ColumnWidthPDF><ColumnWidthHTML></ColumnWidthHTML><column_title>Vendor Name</column_title><tooltip></tooltip><group_header_label>0</group_header_label><group_header_label_xpos></group_header_label_xpos><group_header_data_xpos></group_header_data_xpos><group_trailer_label>0</group_trailer_label></Format></QueryColumn><QueryColumn><Name>purchase_order_code</Name><TableName>po</TableName><ColumnName>purchase_order_code</ColumnName><ColumnType>char</ColumnType><ColumnLength>30</ColumnLength><Format><column_display>show</column_display><content_type>plain</content_type><ColumnStartPDF></ColumnStartPDF><justify>left</justify><ColumnWidthPDF></ColumnWidthPDF><ColumnWidthHTML></ColumnWidthHTML><column_title>PO Number</column_title><tooltip></tooltip><group_header_label>0</group_header_label><group_header_label_xpos></group_header_label_xpos><group_header_data_xpos></group_header_data_xpos><group_trailer_label>0</group_trailer_label></Format></QueryColumn><QueryColumn><Name>po_date</Name><TableName>po</TableName><ColumnName>po_date</ColumnName><ColumnType>char</ColumnType><ColumnLength>30</ColumnLength><Format><column_display>show</column_display><content_type>plain</content_type><ColumnStartPDF></ColumnStartPDF><justify>left</justify><ColumnWidthPDF></ColumnWidthPDF><ColumnWidthHTML></ColumnWidthHTML><column_title>PO Date</column_title><tooltip></tooltip><group_header_label>0</group_header_label><group_header_label_xpos></group_header_label_xpos><group_header_data_xpos></group_header_data_xpos><group_trailer_label>0</group_trailer_label></Format></QueryColumn><QueryColumn><Name>po_status</Name><TableName></Ta