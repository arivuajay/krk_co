@runtot := IF(@runven = vendor_name, @runtot, 0) AS row_number,
@runven := vendor_name AS row_ven,
IF(c_type = 'I',@runtot :=  c_amount  + @runtot,@runtot :=  @runtot - c_amount ) AS balance 
FROM (
/*Invoice List*/
SELECT ven.vendor_id, ven.vendor_name, 
inv.inv_date AS c_date, 
inv.inv_amount AS c_amount, 
&quot;I&quot; AS c_type,
CONCAT(inv.inv_no,'-',DATE_FORMAT(inv.inv_date,'%d/%m/%Y')) particulars, 
inv.inv_date, '' payment_date, 
inv.inv_amount, '' pay_amount
FROM tbl_invoice inv
JOIN tbl_vendor ven
ON ven.vendor_id = inv.vendor_id

UNION ALL

/*Payment List*/
SELECT ven.vendor_id, ven.vendor_name, 
pay.pay_date AS c_date, 
pay.pay_amount AS c_amount, 
&quot;P&quot; AS c_type,
CONCAT('PAY-',invpay.inv_no,'-',DATE_FORMAT(pay.pay_date,'%d/%m/%Y'),'-',pay.pay_type) particulars,
'' inv_date, pay.pay_date, 
'' inv_amount,pay.pay_amount
FROM tbl_payment pay
JOIN tbl_vendor ven ON ven.vendor_id = pay.vendor_id
JOIN tbl_invoice invpay ON invpay.invoice_id = pay.invoice_id
)
AS tmp
ORDER BY vendor_name,c_date ASC </SQLRaw></SQL><QueryColumns><QueryColumn><Name>vendor_name</Name><TableName></TableName><ColumnName>vendor_name</ColumnName><ColumnType>char</ColumnType><ColumnLength>30</ColumnLength><Format><column_display>show</column_display><content_type>plain</content_type><ColumnStartPDF></ColumnStartPDF><justify>left</justify><ColumnWidthPDF></ColumnWidthPDF><ColumnWidthHTML></ColumnWidthHTML><column_title></column_title><tooltip></tooltip><group_header_label>0</group_header_label><group_header_label_xpos></group_header_label_xpos><group_header_data_xpos></group_header_data_xpos><group_trailer_label>0</group_trailer_label></Format></QueryColumn><QueryColumn><Name>inv_date</Name><TableName></TableName><ColumnName>inv_date</ColumnName><ColumnType>char</ColumnType><ColumnLength>30</ColumnLength><Format><column_display>show</column_display><content_type>plain</content_type><ColumnStartPDF></ColumnStartPDF><justify>left</justify><ColumnWidthPDF></ColumnWidthPDF><ColumnWidthHTML></ColumnWidthHTML><column_title>Invoice Date</column_title><tooltip></tooltip><group_header_label>0</group_header_label><group_header_label_xpos></group_header_label_xpos><group_header_data_xpos></group_header_data_xpos><group_trailer_label>0</group_trailer_label></Format></QueryColumn><QueryColumn><Name>payment_date</Name><TableName></TableName><ColumnName>payment_date</ColumnName><ColumnType>char</ColumnType><ColumnLength>30</ColumnLength><Format><column_display>show</column_display><content_type>plain</content_type><ColumnStartPDF></ColumnStartPDF><justify>left</justify><ColumnWidthPDF></ColumnWidthPDF><ColumnWidthHTML></ColumnWidthHTML><column_title></column_title><tooltip></tooltip><group_header_label>0</group_header_label><group_header_label_xpos></group_header_label_xpos><group_header_data_xpos></group_header_data_xpos><group_trailer_label>0</group_trailer_label></Format></QueryColumn><QueryColumn><Name>inv_amount</Name><TableName></TableName><ColumnName>inv_amount</